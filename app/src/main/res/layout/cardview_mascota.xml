<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardviewMascota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:elevation="6dp"
    app:contentPadding="2dp"
    card_view:cardCornerRadius="4dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ImvMascota"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/TvNombreMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="Nombre Mascota"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/TVusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvultima_posicion_conocida"
            android:layout_marginLeft="-137dp"
            android:layout_marginTop="-124dp"
            android:layout_toRightOf="@id/tvultima_posicion_conocida"
            android:ems="10"
            android:text="usuario"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TvEspecieMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvNombreMascota"
            android:layout_marginLeft="166dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="Especie"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/TvRazaMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvEspecieMascota"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="-52dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="raza"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TvColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvRazaMascota"
            android:layout_marginLeft="171dp"
            android:layout_marginTop="-29dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="Color"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TvGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvColor"
            android:layout_marginLeft="-197dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@id/TvColor"
            android:text="Genero"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TvAgregarEdadMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvColor"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="edad" />

        <TextView
            android:id="@+id/TvAgregarTamano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvColor"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="49dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="Tamano" />

        <TextView
            android:id="@+id/TvAgregarDescripcionMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvAgregarEdadMascota"
            android:layout_gravity="center"
            android:layout_marginLeft="-96dp"
            android:layout_marginTop="98dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="Descripcion" />

        <TextView
            android:id="@+id/TvAgregarrecompensa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVusuario"
            android:layout_gravity="center"
            android:layout_marginLeft="166dp"
            android:layout_marginTop="163dp"
            android:text="recompensa" />

        <EditText
            android:id="@+id/fecha_y_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvAgregarEdadMascota"
            android:layout_marginLeft="-124dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:ems="10" />

        <EditText
            android:id="@+id/tvultima_posicion_conocida"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvAgregarEdadMascota"
            android:layout_marginTop="136dp"
            android:ems="10"
            android:text="Ultima Posicion" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
