<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardviewMascota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:elevation="6dp"
    app:contentPadding="2dp"
    card_view:cardCornerRadius="4dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ImvMascota"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/TvNombreMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="Nombre Mascota"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TVusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="159dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="usuario"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TvEspecieMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvNombreMascota"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="Especie"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/TvRazaMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvEspecieMascota"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="-52dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="raza"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TvColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvRazaMascota"
            android:layout_marginLeft="111dp"
            android:layout_marginTop="-20dp"
            android:layout_toRightOf="@id/TvAgregarEdadMascota"
            android:text="Color"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TvGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvColor"
            android:layout_marginLeft="-186dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/TvColor"
            android:text="Genero"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TvAgregarEdadMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvColor"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="33dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="edad" />

        <TextView
            android:id="@+id/TvAgregarDescripcionMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvAgregarEdadMascota"
            android:layout_gravity="center"
            android:layout_marginLeft="-110dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:text="Descripcion" />

        <EditText
            android:id="@+id/fecha_y_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvAgregarEdadMascota"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="-24dp"
            android:layout_toRightOf="@id/ImvMascota"
            android:ems="10"
            android:inputType="date" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/tvultima_posicion_conocida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvAgregarDescripcionMascota"
            android:text="mapa" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>
